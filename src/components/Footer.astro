---
// import CallToAction from './CallToAction.astro'
import ExternalLink from './ExternalLink.astro'
import Logo from './Logo.astro'

/**
 * Footer Component
 *
 * @description A component that displays the footer of the website
 */
// const currentYear = new Date().getFullYear()
---

<footer>
  <!-- <CallToAction /> -->
  <section class="py-20">
    <h2 class="sr-only">Footer</h2>
    <div class="container grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
      <div class="flex flex-col gap-4">
        <h3 class="text-2xl font-bold">Navigation</h3>
        <ul class="flex flex-col gap-2">
          <li><a href="/">Home</a></li>
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <h3 class="text-2xl font-bold">Previous SEAs</h3>
        <ul class="flex flex-col gap-2">
          <li><ExternalLink href="https://regindex.github.io/sea2025.github.io">SEA 2025 (Venice)</ExternalLink></li>
          <li><ExternalLink href="https://sea2024.univie.ac.at/">SEA 2024 (Vienna)</ExternalLink></li>
          <li><ExternalLink href="https://www.sea2023.cs.upc.edu">SEA 2023 (Barcelona)</ExternalLink></li>
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <h3 class="text-2xl font-bold">Development</h3>
        <ul class="flex flex-col gap-2">
          <li>
            <ExternalLink href="https://github.com/SEA2026/sea2026.github.io" class="mr-2">Github Repository</ExternalLink> of this website
          </li>
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <Logo loading="lazy" />
        <p class="leading-[1.75]">
          <div class="text-xl">24<span class="align-super text-sm">th</span> Symposium on Experimental Algorithms</div>
        </p>
      </div>
    </div>
  </section>
  <section class="py-8">
    <div class="container flex flex-col gap-4 md:flex-row md:justify-between">
      <p></p>
      <p>
        Site made by <ExternalLink href="https://itu.dk/~maau">Martin Aum√ºller</ExternalLink> and <ExternalLink
          href="https://holgerdell.com">Holger Dell</ExternalLink
        >.<br />Theme by <ExternalLink href="https://github.com/markteekman">Mark Teekman</ExternalLink>.
      </p>
    </div>
  </section>
</footer>

<style>
  section {
    border-top: 1px solid var(--border-color-subtle);
  }
</style>
